{
    "name": "Shpr",
    "version": "1.0.0",
    "description": "Add item to Shpr fitting room list",
    "permissions": [
        "activeTab",  
        "declarativeContent", 
        "storage", 
        "tabs", 
        "cookies",
        "*://*.shpr.store/"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action" : {
        "default_title": "default_title",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/SHPR_logo_large.png",
            "32": "icons/SHPR_logo_large.png",
            "48": "icons/SHPR_logo_large.png",
            "128": "icons/SHPR_logo_large.png"
          }
    },
    "content_scripts":[
        {
            "js": [
                "content.js",
                "brand_scrapers/mango.js",
                "brand_scrapers/urbanoutfitters.js",
                "brand_scrapers/asos.js"
            ],
            "matches": [
                "https://shop.mango.com/us/*/*/*",
                "https://www.urbanoutfitters.com/shop/*",
                "https://www.asos.com/us/*",
                "https://www.everlane.com/products/*"
            ],

            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/SHPR_logo_large.png",
        "32": "icons/SHPR_logo_large.png",
        "48": "icons/SHPR_logo_large.png",
        "128": "icons/SHPR_logo_large.png" },
    "manifest_version": 2
}